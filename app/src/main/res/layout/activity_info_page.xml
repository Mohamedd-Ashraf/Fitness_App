<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info_page"
    android:background="@color/grey">
  <androidx.cardview.widget.CardView
      android:onClick="expand"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="20dp"
      app:cardCornerRadius="10dp"
      app:contentPadding="20dp"
      android:background="@color/black">
      <LinearLayout
          android:id="@+id/card_layout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"


          >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="About"
              android:textSize="32sp"
              android:textStyle="bold"
              android:textColor="@color/purple_500"
              />
          <TextView
              android:id="@+id/details"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="An application that provides you with a variety of exercise and a degree of difficulty to strengthen your muscles and provides you with information about various foods and their data."
              android:textSize="18sp"
              android:visibility="gone"
              android:textStyle="bold"
              android:textColor="@color/black"
              />
      </LinearLayout>


  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>